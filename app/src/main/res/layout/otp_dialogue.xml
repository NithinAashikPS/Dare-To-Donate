<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_3sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="Detecting OTP"
                android:textColor="@color/on_boarding_text_black"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:id="@+id/close_otp_dialogue"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/icon_background"
                android:padding="@dimen/_3sdp"
                app:srcCompat="@drawable/ic_close"
                app:tint="@color/small_icon_black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
            app:layout_constraintStart_toStartOf="@+id/linearLayout4"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="We have sent a 4-digit OTP on phone number:"
                android:textColor="@color/on_boarding_text_grey"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="9629799459"
                android:textColor="@color/on_boarding_text_black"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
            app:layout_constraintStart_toStartOf="@+id/linearLayout5"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

            <EditText
                android:id="@+id/otp1"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_13sdp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_background"
                android:includeFontPadding="false"
                android:ems="10"
                android:maxLength="1"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:hint="-"
                android:inputType="textPersonName"
                android:textColor="@color/edit_text_text_black"
                android:textColorHint="@color/on_boarding_text_grey"
                android:textSize="@dimen/_10sdp" />

            <EditText
                android:id="@+id/otp2"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:includeFontPadding="false"
                android:layout_weight="1"
                android:background="@drawable/edit_text_background"
                android:ems="10"
                android:maxLength="1"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:hint="-"
                android:inputType="textPersonName"
                android:textColor="@color/edit_text_text_black"
                android:textColorHint="@color/on_boarding_text_grey"
                android:textSize="@dimen/_10sdp" />

            <EditText
                android:id="@+id/otp3"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:includeFontPadding="false"
                android:layout_weight="1"
                android:background="@drawable/edit_text_background"
                android:ems="10"
                android:maxLength="1"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:hint="-"
                android:inputType="textPersonName"
                android:textColor="@color/edit_text_text_black"
                android:textColorHint="@color/on_boarding_text_grey"
                android:textSize="@dimen/_10sdp" />

            <EditText
                android:id="@+id/otp4"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_13sdp"
                android:includeFontPadding="false"
                android:layout_weight="1"
                android:background="@drawable/edit_text_background"
                android:ems="10"
                android:maxLength="1"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:hint="-"
                android:inputType="textPersonName"
                android:textColor="@color/edit_text_text_black"
                android:textColorHint="@color/on_boarding_text_grey"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Resend OTP"
            android:textColor="@color/primary_dark"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout6"
            app:layout_constraintStart_toStartOf="@+id/linearLayout6"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>