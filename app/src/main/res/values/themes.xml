<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.DareToDonate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/primary_dark</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/primary_dark</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_light</item>
        <item name="android:windowBackground">@drawable/ic_splash_screen_background</item>
    </style>
    <style name="OnBoardingTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/primary_dark</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@drawable/white_background</item>
    </style>

    <style name="MainScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/primary_dark</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/edit_text_background_grey</item>
        <item name="android:navigationBarColor">@color/edit_text_background_grey</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@drawable/grey_background</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>